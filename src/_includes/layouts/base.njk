<!DOCTYPE html>
<html lang="en">
  <head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">

		<link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="{{ site.url }}/feed.xml" />
    <link rel="icon" href="{{ site.faviconPath }}" type="image/png" />

    <link href="{{ '/css/style.css' | url }}" rel="stylesheet" />

		{% include 'partials/global/site-meta-info.njk' %}

		{% if (site.analytics.enabled === true) and (site.analytics.gaid) %}
		  <script>
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
				ga('create', '{{ site.analytics.gaid }}', 'auto');
				ga('send', 'pageview');
			</script>
		{% endif %}

  </head>
  <body>
		{% include 'partials/global/site-header.njk' %}

		{% block content %}
		{% endblock content %}

		{% include "partials/global/site-footer.njk" %}

		{% block footer %}
		{% endblock footer %}
  </body>
</html>
